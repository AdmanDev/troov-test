{
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2021"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}